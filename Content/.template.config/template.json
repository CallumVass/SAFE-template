{
    "$schema": "http://json.schemastore.org/template",
    "author": "Tomasz Heimowski",
    "classifications": [
        "Web",
        "Saturn",
        "Azure",
        "Fable",
        "Elmish"
    ],
    "name": "SAFE-Stack Web App v2.0.0-alpha001",
    "tags": {
        "language": "F#",
        "type": "project"
    },
    "identity": "SAFE.Template",
    "shortName": "SAFE",
    "sourceName": "SAFE.Template",
    "symbols": {
        "createdate": {
            "type": "generated",
            "generator": "now",
            "parameters": {
                "format": "yyyy-MM-dd"
            },
            "replaces": "1970-01-01"
        },
        "minimal": {
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        ".template.config/**/*",
                        "**/*.filelist",
                        "**/*.user",
                        "**/*.lock.json"
                    ]
                },
                {
                    "exclude": [
                        "**/.config/**",
                        "**/.devcontainer/**",
                        "**/.paket/**",
                        "**/.vscode/**",
                        "**/.editorconfig",
                        "**/RELEASE_NOTES.md",
                        "**/paket.*",
                        "**/*.fsx",
                        "**/*.scss"
                    ],
                    "condition": "(minimal)"
                },
                {
                    "exclude": [
                    ],
                    "condition": "(!minimal)"
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/paket.*": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "#if"
                        ],
                        "else": [
                            "#else"
                        ],
                        "elseif": [
                            "#elseif"
                        ],
                        "endif": [
                            "#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        },
        "**/*.fs*": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "#if"
                        ],
                        "else": [
                            "#else"
                        ],
                        "elseif": [
                            "#elseif"
                        ],
                        "endif": [
                            "#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    }
}