{
    "$schema": "http://json.schemastore.org/template",
    "author": "Tomasz Heimowski",
    "classifications": [
        "Web",
        "Saturn",
        "Azure",
        "Fable",
        "Elmish"
    ],
    "name": "SAFE-Stack Web App v2.0.0-alpha001",
    "tags": {
        "language": "F#",
        "type": "project"
    },
    "identity": "SAFE.Template",
    "shortName": "SAFE",
    "sourceName": "SAFE.Template",
    "symbols": {
        "createdate": {
            "type": "generated",
            "generator": "now",
            "parameters": {
                "format": "yyyy-MM-dd"
            },
            "replaces": "1970-01-01"
        },
        "minimal": {
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        ".template.config/**/*"
                    ]
                },
                {
                    "exclude": [
                        ".config/**",
                        ".devcontainer/**",
                        ".paket/**",
                        ".vscode/**",
                        ".editorconfig",
                        "RELEASE_NOTES.md",
                        "**/paket.*",
                        "*.fsx",
                        "src/Client/package.default.json",
                        "src/Client/package-lock.default.json",
                        "src/Client/webpack.default.config.js",
                        "README.md"
                    ],
                    "condition": "(minimal)"
                },
                {
                    "exclude": [
                        "src/Client/package.minimal.json",
                        "src/Client/package-lock.minimal.json",
                        "src/Client/webpack.minimal.config.js",
                        "README-minimal.md"
                    ],
                    "condition": "(!minimal)"
                },
                {
                    "rename": {
                        "src/Client/webpack.default.config.js": "src/Client/webpack.config.js",
                        "src/Client/webpack.minimal.config.js": "src/Client/webpack.config.js",
                        "src/Client/package.minimal.json": "src/Client/package.json",
                        "src/Client/package.default.json": "src/Client/package.json",
                        "src/Client/package-lock.minimal.json": "src/Client/package-lock.json",
                        "src/Client/package-lock.default.json": "src/Client/package-lock.json",
                        "README-minimal.md": "README.md"
                    }
                }
            ]
        }
    ],
    "SpecialCustomOperations": {
        "**/paket.*": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "#if"
                        ],
                        "else": [
                            "#else"
                        ],
                        "elseif": [
                            "#elseif"
                        ],
                        "endif": [
                            "#endif"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        },
        "**/*.fsproj": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "<!--#if"
                        ],
                        "else": [
                            "<!--#else",
                            "#else-->"
                        ],
                        "endif": [
                            "<!--#endif",
                            "#endif-->"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        },
        "**/*.fs": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "#if",
                            "//#if",
                            "(*#if"
                        ],
                        "else": [
                            "#else",
                            "//#else",
                            "(*#else",
                            "#else*)"
                        ],
                        "endif": [
                            "#endif",
                            "//#endif",
                            "(*#endif",
                            "#endif*)"
                        ],
                        "trim": "true",
                        "wholeLine": "true"
                    }
                }
            ]
        }
    }
}